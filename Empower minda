    <script>
        // ==========================================
        // NAVEGAÇÃO E MENU MOBILE
        // ==========================================
        function toggleMenu() {
            const navMobile = document.getElementById('nav-mobile');
            const menuToggle = document.querySelector('.menu-toggle');
            const isExpanded = navMobile.classList.toggle('active');
            menuToggle.setAttribute('aria-expanded', isExpanded);
        }

        // Fechar menu ao clicar fora
        document.addEventListener('click', function(event) {
            const navMobile = document.getElementById('nav-mobile');
            const menuToggle = document.querySelector('.menu-toggle');
            if (!navMobile.contains(event.target) && !menuToggle.contains(event.target)) {
                navMobile.classList.remove('active');
                menuToggle.setAttribute('aria-expanded', 'false');
            }
        });

        // ==========================================
        // MODAL DE CONTATO GLOBAL
        // ==========================================
        function abrirModalContato() {
            const modal = document.getElementById('modal-contato');
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Resetar estado do modal
            document.getElementById('selecao-tipo').style.display = 'grid';
            document.querySelectorAll('.formulario').forEach(f => f.classList.remove('active'));
            document.getElementById('sucesso-mensagem').classList.remove('active');
            
            // Focar no título para acessibilidade
            setTimeout(() => {
                document.getElementById('modal-titulo').focus();
            }, 100);
        }

        function fecharModalContato() {
            const modal = document.getElementById('modal-contato');
            modal.classList.remove('active');
            document.body.style.overflow = '';
            voltarSelecao();
        }

        function fecharModalOverlay(event) {
            if (event.target === event.currentTarget) {
                fecharModalContato();
            }
        }

        // Fechar com ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                fecharModalContato();
            }
        });

        // ==========================================
        // FORMULÁRIOS E NAVEGAÇÃO DO MODAL
        // ==========================================
        function abrirFormulario(tipo) {
            document.getElementById('selecao-tipo').style.display = 'none';
            document.querySelectorAll('.formulario').forEach(f => f.classList.remove('active'));
            document.getElementById(`form-${tipo}`).classList.add('active');
            
            // Atualizar título do modal
            const titulos = {
                'ong': 'ONGs — Submeter Projeto',
                'governo': 'Governo — Construir Projeto Conjunto',
                'incentivador': 'Incentivadores — Encontrar Projetos'
            };
            document.getElementById('modal-titulo').textContent = titulos[tipo];
        }

        function voltarSelecao() {
            document.getElementById('selecao-tipo').style.display = 'grid';
            document.querySelectorAll('.formulario').forEach(f => {
                f.classList.remove('active');
                f.reset();
            });
            document.getElementById('sucesso-mensagem').classList.remove('active');
            document.getElementById('modal-titulo').textContent = 'Entrar em Contato';
        }

        // ==========================================
        // VALIDAÇÃO E ENVIO DE FORMULÁRIOS
        // ==========================================
        function handleSubmit(event, tipo) {
            event.preventDefault();
            
            const form = event.target;
            const formData = new FormData(form);
            const dados = {};
            
            // Coletar dados
            formData.forEach((value, key) => {
                if (dados[key]) {
                    if (Array.isArray(dados[key])) {
                        dados[key].push(value);
                    } else {
                        dados[key] = [dados[key], value];
                    }
                } else {
                    dados[key] = value;
                }
            });

            // Validação adicional
            if (!validarFormulario(form, tipo)) {
                return false;
            }

            // Simular envio (aqui você integraria com seu backend)
            console.log(`Enviando formulário ${tipo}:`, dados);
            
            // Armazenar no localStorage como backup/registro
            const registros = JSON.parse(localStorage.getItem('epower_registros') || '[]');
            registros.push({
                tipo: tipo,
                dados: dados,
                data: new Date().toISOString()
            });
            localStorage.setItem('epower_registros', JSON.stringify(registros));

            // Mostrar tela de sucesso
            mostrarSucesso(tipo, dados);
            
            return false;
        }

        function validarFormulario(form, tipo) {
            let valido = true;
            
            // Validação de campos obrigatórios
            const obrigatorios = form.querySelectorAll('[required]');
            obrigatorios.forEach(campo => {
                if (!campo.value.trim()) {
                    campo.classList.add('erro');
                    valido = false;
                } else {
                    campo.classList.remove('erro');
                }
            });

            // Validação específica por tipo
            if (tipo === 'ong') {
                const lgpd = form.querySelector('#lgpd-ong');
                if (!lgpd.checked) {
                    alert('É necessário concordar com o tratamento de dados.');
                    return false;
                }
            }

            return valido;
        }

        function mostrarSucesso(tipo, dados) {
            // Esconder formulário
            document.querySelectorAll('.formulario').forEach(f => f.classList.remove('active'));
            
            // Mostrar mensagem de sucesso
            const sucessoDiv = document.getElementById('sucesso-mensagem');
            sucessoDiv.classList.add('active');
            
            // Atualizar título
            document.getElementById('modal-titulo').textContent = 'Cadastro Recebido';
            
            // Gerar resumo
            const resumoDiv = document.getElementById('resumo-cadastro');
            let resumoHTML = '<strong>Resumo do envio:</strong><br><br>';
            
            // Campos principais para resumo
            const camposPrincipais = ['nome', 'organizacao', 'orgao', 'email', 'perfil'];
            camposPrincipais.forEach(campo => {
                if (dados[campo]) {
                    const label = campo.charAt(0).toUpperCase() + campo.slice(1);
                    resumoHTML += `<p><strong>${label}:</strong> ${dados[campo]}</p>`;
                }
            });
            
            resumoDiv.innerHTML = resumoHTML;
        }

        // ==========================================
        // ABAS DA PÁGINA DE CONTATO
        // ==========================================
        function mudarAba(abaId) {
            // Remover active de todas as abas
            document.querySelectorAll('.aba-btn').forEach(btn => {
                btn.classList.remove('active');
                btn.setAttribute('aria-selected', 'false');
            });
            document.querySelectorAll('.aba-conteudo').forEach(content => {
                content.classList.remove('active');
            });
            
            // Adicionar active na aba selecionada
            event.target.classList.add('active');
            event.target.setAttribute('aria-selected', 'true');
            document.getElementById(abaId).classList.add('active');
        }

        // ==========================================
        // ANIMAÇÕES DE SCROLL
        // ==========================================
        // Intersection Observer para animações suaves
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observar elementos para animar
        document.addEventListener('DOMContentLoaded', () => {
            const elementosAnimar = document.querySelectorAll('.card, .etapa-item, .banner-impacto');
            elementosAnimar.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
                observer.observe(el);
            });
        });

        // ==========================================
        // MÁSCARAS DE INPUT
        // ==========================================
        document.addEventListener('DOMContentLoaded', () => {
            // Máscara simples para telefone
            const telefones = document.querySelectorAll('input[type="tel"]');
            telefones.forEach(tel => {
                tel.addEventListener('input', (e) => {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length <= 11) {
                        value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
                        value = value.replace(/(\d)(\d{4})$/, '$1-$2');
                    }
                    e.target.value = value;
                });
            });
        });
    </script>
</body>
</html>
